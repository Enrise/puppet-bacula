# This file is managed by Puppet. DO NOT EDIT.

# Define the Director name, password used for authenticating the Console program.
Director {
  Name = <%= scope.lookupvar('bacula::director_name') %>
  DirPort = <%= scope.lookupvar('bacula::director_port') %>
  QueryFile = <%= scope.lookupvar('bacula::director_query_file') %>
  WorkingDirectory = <%= scope.lookupvar('bacula::director_working_directory') %>
  PidDirectory = <%= scope.lookupvar('bacula::director_pid_directory') %>
  MaximumConcurrentJobs = <%= scope.lookupvar('bacula::director_max_concurrent_jobs') %>
  Password = "<%= scope.lookupvar('bacula::director_password') %>"
  Messages = <%= scope.lookupvar('bacula::director_messages') %>
  DirAddress = <%= scope.lookupvar('bacula::director_address') %>
  HeartbeatInterval = <%= scope.lookupvar('bacula::heartbeat_interval') %> # Prevents timeouts
}

# Restricted Console, used by tray-monitor for Director status.
Console {
  Name = <%= scope.lookupvar('bacula::director_traymonitor_name') %>
  Password = "<%= scope.lookupvar('bacula::director_traymonitor_password') %>"
  CommandACL = <%= scope.lookupvar('bacula::director_traymonitor_command') %>
}

# Include split config files. Remember to bconsole "reload" after modifying a config file.
@|"sh -c 'cat /<%= scope.lookupvar('bacula::director_config_directory') %>/*.conf'"

# Read client directory for config files. Remember to bconsole "reload" after adding a client.
@|"sh -c 'cat /<%= scope.lookupvar('bacula::director_client_directory') %>/*.conf'"

