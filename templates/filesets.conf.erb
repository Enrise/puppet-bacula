FileSet {
Name = <%= @filesets_name %>
  Include {
    Options {
      signature = <%= @filesets_signature %>
      compression = <%= @filesets_compression %>
      onefs = <%= @filesets_onefs %>
    <% if scope.lookupvar('bacula::array_filesets_fstype') != [] -%>
    <% scope.lookupvar('bacula::array_filesets_fstype').each do |filesets_fstype| -%>
      fstype = <%=filesets_fstype  %> 
    <% end -%>
    }
    <% if scope.lookupvar('bacula::array_filesets_include') != [] -%>
    <% scope.lookupvar('bacula::array_filesets_include').each do |filesets_include| -%>
      File = <%=filesets_include  %>
    <% end -%>
  }
  Exclude {
    <% if scope.lookupvar('bacula::array_filesets_exclude') != [] -%>
    <% scope.lookupvar('bacula::array_filesets_exclude').each do |filesets_exclude| -%>
      File = <%=filesets_exclude  %>
    <% end -%>
  }
}

